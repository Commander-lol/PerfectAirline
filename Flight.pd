class Flight ^=
abstract
	var code : string;
	var date : nat;
	var aircraft : Aircraft;
	var origin : Airport;
	var destination : Airport;
	var passengers : set of Passenger;
	var pilots : set of Pilot;
	var distance : nat;
	
	invariant 	
		#code = 8,
		#pilots > 1,
		origin ~= destination,
		#passengers <= aircraft.passengerLimit;
interface
	build{}
		post ?;
		
	function date;
	function origin;
	function destination;
	
	function isFull:bool
		^= #passengers = aircraft.passengerLimit;
end;

// End
