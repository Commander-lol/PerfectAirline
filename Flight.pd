class Flight ^=
abstract
	var 
		code : string,
		date : nat,
		aircraft : Aircraft,
		origin : Airport,
		destination : Airport,
		passengers : set of Passenger,
		pilots : set of Pilot,
		distance : nat;
	
	invariant 	
		#code = 8,
		#pilots > 1,
		origin ~= destination,
		#passengers <= aircraft.passengerLimit;
interface
	function 
		date,
		origin,
		destination;
	
	function isFull:bool
		^= #passengers = aircraft.passengerLimit;
		
	build{}
		post ?;
end;

// End
