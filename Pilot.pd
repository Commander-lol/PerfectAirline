class Pilot ^=
abstract
	var 
		id : string,
		flyables : set of Aircraft;
	invariant
		#flyables > 0, // Pilots must be able to fly at least one type of plane
		Util isAlpha(id); // ASSUMPTION: IDs are unique alphanumeric strings
interface
	function
		id,
		flyables;
	build{!id:string, !flyables:set of Aircraft}
		pre
			#flyables > 0,
			Util isAlpha(id);
end;
