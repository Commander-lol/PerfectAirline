class Pilot ^=
abstract
	var 
		id : nat,
		flyables : set of Aircraft,
		flights : set of Flight;
	
	invariant 
		// Pilots must be able to fly at least one type of aircraft
		#flyables > 0,
		// The set of flights for which the cardinality of the 
		(for those x :: flights :- #(for those y :: flights :- y.date = x.date yield y) <= 2 yield x) = flights;
		
interface
	build{!id:nat, !flyables: set of Aircraft}
		post flights! = set of Flight{}
end;

