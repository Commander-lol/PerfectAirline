class Airport ^=
abstract
	var 
		name : string,
		code : string,
		flights : set of Flight;
	
	invariant #code = 3;
	
interface
	function inbound:set of Flight
		^= for those f :: flights :- f.destination = self yield f;
		
	function outbound:set of Flight
		^= for those f :: flights :- f.origin = self yield f;
		
	build{!name:string, !code:string}
		post flights! = set of Flight{};
end;

