class Util ^=
interface
	nonmember function isAlpha(phrase:string):bool
		^= (
			[#phrase > 0]: forall c::phrase :- c in (`a`..`z`++`A`..`Z`++`0`..`9`),
			[]: false
		);
end;

class Route ^= pair of (Airport, Airport);

class Date ^= those x:nat :- 1 <= x <= 365;